---
import I18NDebug from "@ariaskit/astro-i18n/I18NDebug.astro";
export type KT = { key: string; value: string };

interface Props {
    name: string;
    title: KT;
    p1: KT;
    p2: KT;
    p3: KT;
}

const { title, p1, p2, p3 } = Astro.props as Props;
---

<section id="sobre-mi" class="mb-10 mt-20 md:mt-50">
    <h1 class="mb-4 font-bold text-2xl tracking-tighter uppercase">
        Christopher Sanchez
    </h1>
    
    <div class="[&_p]:mb-6 leading-7 text-[1rem] md:text-[1.1rem]">
        <p>
            <I18NDebug key={title.key}>
                <span class="text-green-500 font-semibold">{title.value} </span>
            </I18NDebug>
            <I18NDebug key={p1.key}>
                <span class="opacity-70">{p1.value}</span>
            </I18NDebug>
        </p>
        
        <I18NDebug key={p2.key}>
            <p class="opacity-50">{p2.value}</p>
        </I18NDebug>
        
        <I18NDebug key={p3.key}>
            <p class="opacity-50">{p3.value}</p>
        </I18NDebug>
    </div>
</section>
---
type Option = { key:string; value:string }

interface Props {
    status: Option 
    id:string;
    email_label?: Option ;
    email_url?: Option ;
    github_label?: Option ;
    github_url?: Option ;
    x_label?: Option ;
    x_url?: Option ;
    linkedin_label?: Option ;
    linkedin_url?: Option;
}

const { status, email_label, email_url, github_label, github_url, x_label, x_url, linkedin_label, linkedin_url, id } = Astro.props as Props
---

<footer
    id="Contacto" 
    class="my-24 border-t pt-10 text-sm grid grid-cols-1 gap-4 place-items-center scroll-mt-48"
>
    <div class="flex items-center">
        <span
            class="inline-block w-2 h-2 rounded-full bg-green-500 mr-2 animate-pulse"
        ></span>
        <span class="opacity-70 uppercase tracking-widest text-[0.75rem]">{status.value}</span>
        <span
            class="inline-block w-2 h-2 rounded-full bg-green-500 ml-2 animate-pulse"
        ></span>
    </div>

    <div class="flex gap-6 [&_a]:transition-all [&_a]:duration-200">
        {email_url && email_label && (
            <a 
                href={email_url.value} 
                class="opacity-70 hover:opacity-100 hover:text-green-500"
            >
                {email_label.value}
            </a>
        )}
        
        {github_label && (
            <span 
                class="cursor-not-allowed opacity-20" 
                title="Temporalmente fuera de servicio"
            >
                {github_label.value}
            </span>
        )}

        {linkedin_url && linkedin_label && (
            <a 
                href={linkedin_url.value} 
                rel="noopener noreferrer" 
                target="_blank"
                class="opacity-70 hover:opacity-100 hover:text-green-500"
            >
                {linkedin_label.value}
            </a>
        )}
    </div>

    <p class="mt-4 opacity-30 text-[0.65rem] uppercase tracking-tighter">
        Â© 2026 Christopher - Cloud
    </p>
</footer>